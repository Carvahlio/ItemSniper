<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.major.itemsniper">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- android:theme="@style/AppTheme" THIS THEME IS MAKING THE INITIAL PAGES HAVE A TOOLBAR BECAUSE IT IS APPLIED TO APP -->
        <activity android:name=".MainActivity"
            android:theme="@style/NoActionBarAndNoTitle">

        </activity>

        <activity android:name=".InitialActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"  />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".ConsumerRegisterActivity"
            android:theme="@style/NoActionBarAndNoTitle">

        </activity>

        <activity android:name=".UploadPictureActivity"
            android:theme="@style/NoActionBarAndNoTitle">

        </activity>

    </application>

</manifest>
